[alias]
    addw = !sh -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero' -
    current = rev-parse --abbrev-ref HEAD
    lg = !export GIT_CURRENT_BRANCH=$(git current) && git log ${GIT_CURRENT_BRANCH} --oneline --graph --decorate --remotes=*/${GIT_CURRENT_BRANCH}
    ro = !export GIT_CURRENT_BRANCH=$(git current) && git reset --hard origin/${GIT_CURRENT_BRANCH}
    st = status
    unstage = reset HEAD --
[color]
    ui = true
[core]
    autocrlf = true
    editor = vi
[diff]
    wsErrorHighlight = all
[difftool "sourcetree"]
    cmd = '' \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = kdiff3-linux
[mergetool "kdiff3-linux"]
    path = /usr/bin/kdiff3
[mergetool "kdiff3-windows"]
    path = C:/Program Files/KDiff3/kdiff3.exe
[mergetool "sourcetree"]
    cmd = "'' "
    trustExitCode = true
